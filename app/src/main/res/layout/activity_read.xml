<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout_read_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/clear_fields"
                android:background="@drawable/button_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="reiniciar" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_read_btn"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="122dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        app:srcCompat="@drawable/ativo_3" />

    <EditText
        android:id="@+id/select_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="189dp"
        android:backgroundTint="@color/textColor"
        android:hint="Leia o Codigo de barras"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/data_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="189dp"
        android:backgroundTint="@color/textColor"
        android:hint="CÃ³digo de Barras"
        android:textSize="25dp">

    </EditText>

    <TextView
        android:id="@+id/label_titulo"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="2dp"
        android:text="TextView"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#3C6C9F"
        android:textColor="#FFFFFF"
    />

    <TextView
        android:id="@+id/label_chassis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="244dp"
        android:text="Chassis: "
        android:textAlignment="textStart"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/campoChassis"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="6dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textSize="23dp" />

</RelativeLayout>